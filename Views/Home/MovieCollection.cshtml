@model List<MovieApplication>
@{
    ViewData["Title"] = "Movie Collection";
}

<div class="text-center">
    <h1>Movie Collection</h1>
</div>

<div>
    <table class="table table-bordered">
        <thead class="fw-bold">
            <tr>
                <td>Category</td>
                <td>Title</td>
                <td>Year</td>
                <td>Director</td>
                <td>Rating</td>
                <td>Edited</td>
                <td>Lent To</td>
                <td>Notes</td>
            </tr>
        </thead>

        <tbody>
            @foreach (var x in Model) {
                <tr>
                    <td>@x.Category</td>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>
                </tr>
            }
        </tbody>
    </table>
</div>

